{
  "name": "metamask",
  "version": "1.0.0",
  "description": "Sign in & Pay with Metamask browser plugin",
  "main": "dist/index.js",
  "repository": "git@github.com:dannysofftie/metamask-wallet.git",
  "author": "Danny",
  "license": "MIT",
  "private": true,
  "devDependencies": {},
  "scripts": {
    "dev": "yarn concurrently 'cd api && yarn dev' 'cd client && yarn dev'",
